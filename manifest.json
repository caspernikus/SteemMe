{
  "short_name": "SteemMe",
  "name": "SteemMe",
  "icons": {
      "16": "./img/icon_16px.png",
      "48": "./img/icon_48px.png",
      "128": "./img/icon_128px.png"
  },
  "version": "0.0.8",
  "manifest_version": 2,
  "description": "",
  "browser_action": {
    "default_icon": {},
    "default_title": "SteemMe",
    "default_popup": "src/html/index.html"
  },
  "permissions": [
        "https://coinmarketcap.com/*"
    ],
  "options_ui": {
    "page": "src/html/options.html",
    "chrome_style": false
  },
  "permissions": [
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com https://cdn.steemjs.com; object-src 'self'"
}
